@{
    Layout = null;
}



<div class="form-signin  d-flex flex-column min-vh-100 min-vw-100">
    <div class="d-flex flex-grow-1 justify-content-center align-items-center">

        <form action="/User/Login" method="post" class="">

            <h1 class="h3  fw-normal text-center">Войдите в систему</h1>
            <div>
                <a style="color:red">@ViewBag.Message</a>
            </div>
            <div class="form-floating py-1">
                <input type="email" name="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating py-1">
                <input type="password" name="Password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Пароль</label>
            </div>


            <button class="w-100 btn btn-primary py-1" value="Login" type="submit">Войти</button>
            <div class="form-floating py-1">
                <a class="w-100 btn btn-outline-secondary py-1" href="/User/Create">Регистрация</a>
            </div>
        </form>

    </div>
</div>

